<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><%= t 'view.phone.header_delete' %></h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      <%= t 'view.phone.delete.confirmation_message' %>
      <div class="modal-footer">
        <%= link_to (t 'view.phone.delete.confirmation_yes'), phone_path(@phone), method: :delete, remote: true, class: "btn btn-danger" %>
        <%= link_to (t 'no'), "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
    </div>
  </div>
</div>