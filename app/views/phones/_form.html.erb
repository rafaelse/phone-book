<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for :telephone, method: :post, url: phones_path, remote: true, html: {style: "display: inline;"} do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>
          <div class="form-group">
            <%= f.label :person_id, 'Pessoa', class: "control-label" %>
            <%= f.collection_select :person_id, @people, :id, :name,{},  {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :sec_id, 'Secretaria', class: "control-label" %>
            <%= f.collection_select :sec_id, @secretaries, :id, :name, {}, {id: 'sec_select', class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.label :dept_id, 'Departamento', class: "control-label" %>
            <%= f.collection_select :dept_id, @departments, :id, :name, {}, {id: 'dept_select', class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.label :sector_id, 'Setor', class: "control-label" %>
            <%= f.collection_select :sector_id, @sectors, :id, :name, {}, {id: 'sector_select', class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.label :ddr, 'DDR', class: "control-label" %>
            <%= f.text_field :ddr, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :ramal, class: "control-label" %>
            <%= f.text_field :ramal, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Salvar", class: "btn btn-primary" %>
          <%= link_to "Cancelar", "#", class: "btn", data: {dismiss: "modal"} %>
        </div>
    <% end %>
  </div>
</div>