<% if division.subdivisions.empty? and division.phones.size == 1 %>
    <%= render division.phones.first %>
<% else %>
    <div class="col-sm-12 container card" style="border-top-style: solid; border-top-width: 1px; border-top-color: lightgrey; padding: 10px">

      <div class="col-sm-12 col-md-8">
        <h3><%= division.name %></h3>
      </div>

      <% if not division.subdivisions.empty? %>
          <div class="col-sm-12 col-md-4" style="padding: 4% 0">
            <%= link_to 'Ver subdepartamentos', subdivisions_division_path(division), class: 'btn btn-default btn-lg btn-block' %>
          </div>
      <% elsif division.phones.size > 1 %>
          <div class="col-sm-12 col-md-4" style="padding: 4% 0">
            <%= link_to 'Ver telefones', phones_division_path(division), class: 'btn btn-default btn-lg btn-block' %>
          </div>
      <% end %>
    </div>
<% end %>
