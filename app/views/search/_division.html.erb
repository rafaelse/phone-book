<% if division.subdivisions.empty? %>
    <div class="col-xs-12">
      <h3><%= division.name %></h3>
    </div>
<% else %>
    <div class="col-xs-12 col-md-9">
      <h3><%= division.name %></h3>
    </div>
    <div class="col-xs-12 col-md-3" %>
      <h5 style="text-align: right; position: relative; bottom: 0">
        <a href="<%= search_subdivisions_path(division) %>">
          departamentos
          <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
      </h5>
    </div>
<% end %>
<div class="col-xs-12">
  <h4>
    <% division.phones.each_with_index do |phone, index| %>
        <a href="#"><%= "#{phone.ddr}" if phone.ddr %></a>
        <%= "-" if phone.ddr and phone.branch %>
        <% if phone.branch %> <a href="#"><%= phone.branch %> </a>
        <% end %>
        <%= '|' unless index == division.phones.size - 1 %>
    <% end %>
  </h4>
</div>
<div class="col-xs-12">
  <h5>
    <% division.people.each_with_index do |person, index| %>
        <%= link_to person.name, search_people_path(person) %>
        <%= "|" unless index == division.people.size - 1 %>
    <% end %>
  </h5>
</div>
