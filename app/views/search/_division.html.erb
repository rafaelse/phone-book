<div class="col-xs-12 container card" style="border-top-style: solid; border-top-width: 1px; border-top-color: lightgrey; padding: 10px">
  <% if division.subdivisions.empty? %>
      <div class="col-xs-12">
        <h3><%= division.name %></h3>
      </div>
  <% else %>
      <div class="col-xs-12 col-md-9">
        <h3><%= division.name %></h3>
      </div>
      <div class="col-xs-12 col-md-3" %>
        <h5 style="text-align: right">
          <a href="#">
            Subdepartamentos
            <span class="glyphicon glyphicon-chevron-down"></span>
          </a>
        </h5>
      </div>
  <% end %>
  <div class="col-xs-12">
    <h4>
      <% division.phones.each_with_index do |phone, index| %>
          <a href="#"><%= "#{phone.ddr}" if phone.ddr %></a>
          <% if phone.branch %>
              - <a href="#"><%= phone.branch %></a>
          <% end %>
          <%= '/' unless index == division.phones.size - 1 %>
      <% end %>
    </h4>
  </div>
  <div class="col-xs-12">
    <h5>
      <% division.people.each_with_index do |person, index| %>
          <a href="#"><%= person.name %></a>
          <%= "/" unless index == division.people.size - 1 %>
      <% end %>
    </h5>
  </div>
</div>